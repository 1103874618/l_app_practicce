/* pages/first/first.wxss */
page{
  height: 100%;
  width: 100%;
}

.container{
  padding: 0;
  display: flex;
  height: 350rpx;
  width: 100%;
  align-items: flex-start;
}
.container:nth-child(2){
  position: relative;
  height: auto;
  
}
swiper{ 
  height: 350rpx;
  width: 100%;
}
swiper image{
  width: 100%;
}
.selection{
  padding-bottom: 1.5rem;
  width: 100%;
  border-bottom: 5px solid #ddd;
}

.header{
  margin-top: 1rem;
  margin-bottom: 0.8rem;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  font-size: 1rem;
  border-left: 2px solid limegreen;
  justify-content: space-between;
  align-items: center;
  height: 2rem;
}
.header_rf{
  font-size: 0.8rem;
  color: yellowgreen;
  border: none;
 

}
.shop_content{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.content_items{
  
  position: relative;
  margin:0.2rem 0;
  height: 6rem;
  width:45%;
  background: #ff0000;
  border: 1px solid whitesmoke;
}
.content_items image,.test_item_images image{
  height: 100%;
  width: 100%;
}
.item_text{
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 100%;
  height: 30%;
  color: white;
  font-size: 0.8em;
  position: absolute;
  bottom: 0rem;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.8),rgba(0, 0, 0, 0.0));
  padding: 0.2rem;
}
.test_item{
  position: relative;
  height: 14rem;
}
.test_item_images{
  position: relative;
  height: 9rem;
  width: 100%;

}
.test_item_text{
  box-sizing: border-box;
  height: 5rem;
  width: 100%;
  padding-top: 0.6rem;
  padding-left: 0.4rem;
  padding-right: 0.4rem;
  padding-bottom: 0.4rem;

}

/* 用户头像的样式 */
.test_item image:nth-child(2){
  height: 2rem;
  width: 2rem;
  border-radius: 50%;
  position: absolute;
  bottom: 4rem;
  right: 1rem;
  z-index: 10;
}
.test_item_text_title{
  font-size: 0.9rem;
  box-sizing: border-box;
  font-weight:bold;
}
.test_item_text_content{
  margin-top: 0.5rem;
  box-sizing: border-box;
   font-size: 0.7em;
   color: #999;
}
.header text{
  margin: auto 0.6rem;
}
